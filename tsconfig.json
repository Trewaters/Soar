{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@*": ["./*"],
      "@app/*": ["./app/*"],
      "@lib/*": ["./lib/*"],
      "@prismaSchema/*": ["./prisma/*"],
      "@components/*": ["./app/components/*"],
      "@interfaces/*": ["./app/interfaces/*"],
      "@styles/*": ["./styles/*"],
      "@client-api/*": ["./pages/api/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest"
  ],
  "exclude": ["node_modules"]
}
